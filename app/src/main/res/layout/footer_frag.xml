<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#323232"
    android:clickable="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:clickable="false">

            <ImageView
                android:id="@+id/footer_frag_iv_backward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/ic_bg_states"
                android:padding="3dp"
                android:rotationY="180"
                android:src="@drawable/ic_back_10_black_24dp"
                android:tint="@android:color/holo_orange_dark" />

            <ImageView
                android:id="@+id/footer_frag_iv_toogle_play_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/ic_bg_states"
                android:padding="3dp"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:tint="@android:color/holo_orange_dark" />

            <ImageView
                android:id="@+id/footer_frag_iv_forward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/ic_bg_states"
                android:padding="3dp"
                android:src="@drawable/ic_back_10_black_24dp"
                android:tint="@android:color/holo_orange_dark" />

        </LinearLayout>

        <ImageView
            android:id="@+id/footer_frag_iv_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="2dp"
            android:background="@drawable/ic_bg_states"
            android:padding="3dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@android:color/holo_orange_dark" />

    </LinearLayout>
</LinearLayout>